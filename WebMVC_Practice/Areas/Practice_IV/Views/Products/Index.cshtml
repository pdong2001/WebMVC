@model IEnumerable<Models.Entity.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descriptionn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th style="width:5rem"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriptionn)
            </td>
            <td>
                <img width="100" height="100" src="~/Assets/img/products/@item.ImagePath" alt="Product Image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a style="width:5rem" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                <a style="width:5rem" class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ID">Details</a>
                <a style="width:5rem" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
