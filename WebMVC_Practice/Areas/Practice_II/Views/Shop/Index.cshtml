@{
    Layout = "_ShopLayout";
}
@using Models.Entity
@model Product[]

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-4 d-flex justify-content-center">
            <div class="card" style="width: 18rem;">
                <img src="~/Assets/img/photos/@item.ImagePath" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">
                        @item.Descriptionn
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Giá: @item.Price $</li>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link">Đặt mua</a>
                    <a asp-action="detail" asp-route-id="@item.ID" class="card-link">Chi tiết</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>

