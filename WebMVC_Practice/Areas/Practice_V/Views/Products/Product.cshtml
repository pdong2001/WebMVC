@model Models.Entity.Product
    <li class="col-sm-4 product-item">
        <div class="left-block">
            <a>
                <img class="img-responsive" alt="product"
                     src="~/Assets/img/products/@Model.ImagePath" />
            </a>

            <div class="quick-view">
                <a title="Add to my wishlist" class="heart" href="#"></a>
                <a title="Add to compare" class="compare" href="#"></a>
                <a title="Quick view" href="~/Assets/img/products/@Model.ImagePath" class="search fancybox-button"></a>
            </div>
            <div class="add-to-cart">
                <a class="add-item-to-cart" title="Add to Cart" href="#" data-name="@Model.Name"
                   data-price="@Model.Price" data-image="~/Assets/img/products/@Model.ImagePath" data-product-code="@Model.ID">Add to Cart</a>
            </div>
            <div class="bestseller"></div>
        </div>
        <div class="right-block">
            <h5 class="product-name"><a asp-action="Details" asp-route-id="@Model.ID">@Model.Name</a></h5>

            <div class="content_price">
                <span class="price product-price"><span style="color: black">Price:</span> @Model.Price đ</span>
            </div>
        </div>
    </li>